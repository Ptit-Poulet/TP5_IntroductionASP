@model List<Menuchoices>
@{
    ViewData["Title"] = "Administration";
}
<div class="row text-center">
    <div class="col-12">
        <div class="page-title">
            <h2><i class="fa-regular fa-rectangle-list"></i> Liste des choix de menu</h2>
        </div>
    </div>
</div>
<div class="row">
    <table class="table table-sm table-bordered table-striped table-hover w-75 mx-auto">
        <tr>
       
            <!-- Permet d'utiliser l'attribut Display(Name="...") de propriété du modèle -->
            <!-- Permet de gérer l'affichage du modèle à un seul endroit -->

            <th class="d-flex justify-content-start">@Html.DisplayNameFor(model => model[0].Description)</th>

            <th class ="d-flex justify-content-end">Actions</th>
        </tr>
        @if (Model.Count > 0)
        {
            foreach (Menuchoices choix in Model)
            {
                <tr>
                   
                    <!-- Génère le html selon les attributs de propriété du modèle. Comme par exemple, l'attribut DisplayFormat(...) -->
                    <!-- Permet de gérer l'affichage du modèle à un seul endroit -->

                    <td class="d-flex justify-content-start">@Html.DisplayFor(model => choix.Description)</td>

                    <td class="d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@choix.Id" id="edit" title="Modifier"><i class="fa-regular fa-pen-to-square"></i></a> |
                        <a asp-action="Delete" asp-route-id="@choix.Id" id="delete" title="Supprimer"><i class="fa-regular fa-trash-can"></i></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">Aucun choix de menu trouvé.</td>
            </tr>
        }
    </table>
</div>

<div class="row text-center">

    <p><a asp-action="Create" class="btn btn-primary">Ajouter un choix de menu</a></p>
</div>

