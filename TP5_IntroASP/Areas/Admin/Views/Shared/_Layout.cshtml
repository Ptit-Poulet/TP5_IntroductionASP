<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="~/Admin/Assets/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Admin/Assets/css/admin-bootstrap.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar  navbar-expand-lg navbar-expand-md bg-body-tertiary bg-dark navbar-dark" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand fs-1" asp-area="Admin" asp-controller="Menuchoices" asp-action="Index">Administration</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link fs-1" asp-area="Admin" asp-controller="Menuchoices" asp-action="Index"><i class="fa-regular fa-rectangle-list"></i> Les choix de menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-1" asp-area="Admin" asp-controller="Reservations" asp-action="List"><i class="fa-solid fa-user"></i> Les réservations</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <div class="text-center bg-dark text-white sticky-bottom h-25">
        <a class="fs-1" asp-area="Admin" asp-controller="Menuchoices" asp-action="Index"><i class="fa-regular fa-rectangle-list"></i> Les choix de menu</a>&nbsp;&nbsp;&nbsp;
        <a class="fs-1" asp-area="Admin" asp-controller="Reservations" asp-action="List"><i class="fa-solid fa-user"></i> Les réservations</a>
    </div>

    <footer class="bg-dark text-center text-white sticky-bottom">

        <br />
        <div class="container fs-2">
            ASP.NET MVC - &copy;Samara Boudreault |
            <a asp-area="" asp-controller="Home" asp-action="Index">Réservation</a>
        </div>
    </footer>
    <!-- Placé à la fin du document pour un chargement plus rapide des pages -->
    <!-- Ordre : jQuery, Popper.js, puis Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/js/bootstrap.min.js"></script>

    <script src="~/Admin/Assets/js/admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
