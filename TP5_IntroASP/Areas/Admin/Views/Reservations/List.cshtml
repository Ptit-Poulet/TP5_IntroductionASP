@model List<Reservations>
@{
    ViewData["Title"] = "Administration";
}
<div class="row text-center">
    <div class="col-12">
        <div class="page-title">
            <h2><i class="fa-solid fa-user"></i>  Liste des réservations</h2>
        </div>
    </div>
</div>
<div class="row">
    <table class="table table-sm table-bordered table-striped table-hover">
        <tr>

            <!-- Permet d'utiliser l'attribut Display(Name="...") de propriété du modèle -->
            <!-- Permet de gérer l'affichage du modèle à un seul endroit -->

            <th>@Html.DisplayNameFor(model => model[0].DateReservation)</th>
            <th>@Html.DisplayNameFor(model => model[0].Nom)</th>
            <th class="d-none d-md-block">@Html.DisplayNameFor(model => model[0].Courriel)</th>
            <th>@Html.DisplayNameFor(model => model[0].MenuChoiceId)</th>
            <th>@Html.DisplayNameFor(model => model[0].NbPersonne)</th>

            <th class="d-none d-md-block">Actions</th>
        </tr>
        @if (Model.Count > 0)
        {
            foreach (Reservations reservation in Model)
            {
                <tr>

                    <!-- Génère le html selon les attributs de propriété du modèle. Comme par exemple, l'attribut DisplayFormat(...) -->
                    <!-- Permet de gérer l'affichage du modèle à un seul endroit -->

                    <td>@Html.DisplayFor(model => reservation.DateReservation)</td>
                    <td>@Html.DisplayFor(model => reservation.Nom)</td>
                    <td class="d-none d-md-block">@Html.DisplayFor(model => reservation.Courriel)</td>
                    @*TODO Donner le nom du choix de menu*@
                    <td>@Html.DisplayFor(model => reservation.MenuChoiceId)</td>
                    <td>@Html.DisplayFor(model => reservation.NbPersonne)</td>

                    <td>
                        <a asp-action="Delete" asp-route-id="@reservation.Id" id="delete" title="Supprimer"><i class="fa-regular fa-trash-can"></i></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">Aucune réservation trouvé.</td>
            </tr>
        }
    </table>
</div>


