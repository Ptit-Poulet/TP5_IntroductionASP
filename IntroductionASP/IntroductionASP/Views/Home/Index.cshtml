@{
    ViewData["Title"] = "Réservation en ligne";
}
@section Links
{
    <!--
        Section qui permet d'ajouter des balises dans <head> seulement dans cette vue
    -->

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-boostrap.css" asp-append-version="true" />
}
<div id="reservation-page">
    <div class="row">
        <div class="col-12">
            <div class="page-title">
                <h2>Votre réservation</h2>
            </div>
        </div>
    </div>
    <div class="col">
         <div class="image-section">
             @*Choisir image*@
                @*<img src="~/img/contact.png" alt="Contact" class="img-fluid" />*@
            </div>
    </div>
    @*DOIT êttre post !!*@
    <div class="col">
        <div class="form-section">
            <form>
                <div class="row">
                    <div class="col-md-4 offset-md-2">
                        <div class="form-group">
                            <label class="form-control-label" for="name"> Nom</label>
                            <input type="text" class="form-control" name="name" id="name">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4  offset-md-2">
                        @*Jquery*@
                        <div class="form-group">
                            <label class="form-control-label" for="email"> Courriel</label>
                            <input type="email" class="form-control" name="email" id="email">
                        </div>
                    </div>
                </div>
                 <div class="row">
                    <div class="col-md-4 offset-md-2">
                        @*Jquery*@
                        <div class="form-group">
                            <label class="form-control-label" for="name"> Nombre</label>
                            <input type="number" class="form-control" name="number" id="number">
                        </div>
                    </div>
                </div>
                 <div class="row">
                    <div class="col-md-4 offset-md-2">
                        @*Jquery*@
                        <div class="form-group">
                            <label class="form-control-label" for="name"> Date</label>
                            <input type="date" class="form-control" name="date" id="date">
                        </div>
                    </div>
                </div>
                 <div class="row">
                    <div class="col-md-4 offset-md-2">
                        <div class="form-group">
                            <label class="form-control-label" for="name"> Choix de menu</label>
                           <select class="combo">
                               @*DONNÉES de la BD genre foreach <option value=""> value<option>*@
                           </select>
                        </div>
                    </div>
                </div>
                 <div class="row">
                    <div class="col-md-4 offset-md-2">
                        <div class="form-button">
                            <span class="input-group-btn">
                                @*Renvoyer à reservation/details/{id}*@
                                <button href="" type="submit" class="btn btn-primary">Confirmer la réservation</button>
                            </span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
